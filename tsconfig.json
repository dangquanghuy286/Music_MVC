{
  "compilerOptions": {
    "target": "ES6", // Phiên bản JS đầu ra
    "module": "commonjs", // Dùng cho Node.js
    "outDir": "dist", // Thư mục chứa file build
    "rootDir": "./", // Thư mục code nguồn
    "strict": true, // Bật kiểm tra nghiêm ngặt
    "esModuleInterop": true, // Cho phép import default
    "removeComments": true // Xóa comment khi build
  }
}
